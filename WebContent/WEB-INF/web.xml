<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
        http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
    version="3.1">

    <!-- コンテキストパラメータ -->
    <context-param>
        <param-name>upload-dir</param-name>
        <param-value>C:/work/pleiades/workspace/group_kadai/WebContent</param-value>
    </context-param>

    <!-- サーブレットの設定 -->
    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>tool.LoginController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>FrontController</servlet-name>
        <servlet-class>tool.FrontController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>FrontController</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>

    <!-- リソースの設定 -->
    <resource-ref>
        <description>DB Connection</description>
        <res-ref-name>jdbc/javasd</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>

</web-app>
